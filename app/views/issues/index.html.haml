%h2 Issues
- unless @issues.blank?
  %table#issue_index
    %thead
      %tr
        %th Title
        %th Description

      %tbody#sortable_issues
        - @issues.each do |issue|
          %tr.issues
            %td= link_to issue.title, issue
            %td= issue.description
            %td.issue_id
              %span{ :"data-issue_id" => issue.id }
- else
  %h3 No Issues

#add_issues
  = link_to "Add Issue", new_issue_path
